from typing import List

class Solution:
    def largestMagicSquare(self, grid: List[List[int]]) -> int:
        m, n = len(grid), len(grid[0])

        # Row and column prefix sums
        row_ps = [[0] * (n + 1) for _ in range(m)]
        col_ps = [[0] * n for _ in range(m + 1)]
        for i in range(m):
            for j in range(n):
                row_ps[i][j + 1] = row_ps[i][j] + grid[i][j]
                col_ps[i + 1][j] = col_ps[i][j] + grid[i][j]

        # Diagonal prefix sums
        # diag1: top-left -> bottom-right
        diag1 = [[0] * (n + 1) for _ in range(m + 1)]
        for i in range(m):
            for j in range(n):
                diag1[i + 1][j + 1] = diag1[i][j] + grid[i][j]

        # diag2: top-right -> bottom-left
        # Use an (m+1) x (n+1) grid so we can do diag2[i+1][j] = diag2[i][j+1] + grid[i][j]
        diag2 = [[0] * (n + 1) for _ in range(m + 1)]
        for i in range(m):
            for j in range(n - 1, -1, -1):
                diag2[i + 1][j] = diag2[i][j + 1] + grid[i][j]

        def row_sum(r: int, c1: int, c2: int) -> int:
            return row_ps[r][c2] - row_ps[r][c1]

        def col_sum(c: int, r1: int, r2: int) -> int:
            return col_ps[r2][c] - col_ps[r1][c]

        def diag1_sum(i: int, j: int, k: int) -> int:
            return diag1[i + k][j + k] - diag1[i][j]

        def diag2_sum(i: int, j: int, k: int) -> int:
            # from (i, j+k-1) down-left to (i+k-1, j)
            return diag2[i + k][j] - diag2[i][j + k]

        max_k = min(m, n)
        for k in range(max_k, 1, -1):
            for i in range(m - k + 1):
                for j in range(n - k + 1):
                    target = row_sum(i, j, j + k)

                    # Diagonals must match
                    if diag1_sum(i, j, k) != target or diag2_sum(i, j, k) != target:
                        continue

                    ok = True
                    # Check all rows
                    for r in range(i, i + k):
                        if row_sum(r, j, j + k) != target:
                            ok = False
                            break
                    if not ok:
                        continue

                    # Check all columns
                    for c in range(j, j + k):
                        if col_sum(c, i, i + k) != target:
                            ok = False
                            break

                    if ok:
                        return k

        return 1
